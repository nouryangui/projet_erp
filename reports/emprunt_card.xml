<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_emprunt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <br></br>
                        <br></br>
                        <br></br>
                        <br></br>
                        <div class="oe_structure">
                            <div class="row" width="90%">

                                <center>
                                    <div class="col-xs-12" style="margin:auto;">
                                        <table class="table table-condensed" style="border:3px solid black !important;">
                                            <tr>
                                                <td>
                                                    <p style="text-align:center;">
                                                        <strong>Livre</strong>
                                                    </p>
                                                    <p style="text-align:center;">
                                                        <strong>Adherent</strong>
                                                    </p>
                                                    <p style="text-align:center;">
                                                        <strong>Date Emprunt</strong>
                                                    </p>
                                                    <p style="text-align:center;">
                                                        <strong>Date retour</strong>
                                                    </p>
                                                </td>
                                                <td>
                                                    <p style="text-align:left;padding-left:10px;"
                                                       t-field="doc.livre_id.titre">
                                                    </p>
                                                    <p style="text-align:left;padding-left:10px;"
                                                       t-field="doc.adherent_id.nom">
                                                    </p>
                                                    <p style="text-align:left;padding-left:10px;"
                                                       t-field="doc.date_debut">
                                                    </p>
                                                    <p style="text-align:left;padding-left:10px;"
                                                       t-field="doc.date_fin">
                                                    </p>
                                                </td>
                                            </tr>

                                        </table>
                                    </div>
                                </center>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>


</odoo>