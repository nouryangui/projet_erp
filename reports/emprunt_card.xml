<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_emprunt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <h2>Emprunt</h2>
                    Nom du livre:
                    <t t-esc="doc. livre_id.titre"/>
                    Adherent:
                    <t t-esc="doc.adherent_id.nom"/>
                    <t t-esc="doc.adherent_id.prenom"/>
                    Date Emprunt:
                    <t t-esc="doc.date_debut"/>
                    Date Retour:
                    <t t-esc="doc.date_fin"/>
                </t>
            </t>
        </t>
    </template>


</odoo>