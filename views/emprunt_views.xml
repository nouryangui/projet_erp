<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="emprunt_list_view">
            <field name="name">liste des emprunts</field>
            <field name="model">bibliotheque.emprunt</field>
            <field name="arch" type="xml">
<!--            <search string="Search adherant par id">-->
<!--                <field name="adherent_id"/>-->
<!--           </search>-->
                <tree>
                    <field name="date_debut"/>
                    <field name="date_fin"/>
                    <field name="livre_id"/>
                    <field name="adherent_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!-- explicit form view definition -->
        <record model="ir.ui.view" id="emprunt_form_view">
            <field name="name">emprunt form</field>
            <field name="model">bibliotheque.emprunt</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_done" type="object" string="Livre retournÃ©" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="lancee,fini"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="date_debut"/>
                            <field name="date_fin"/>
                            <field name="livre_id" required="1"/>
                            <field name="adherent_id" required="1"/>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>
        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="emprunt_action_window">
            <field name="name">Emprunt</field>
            <field name="res_model">bibliotheque.emprunt</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- menu categories -->
        <menuitem name="Emprunt" id="bibliotheque_emprunt_cat" parent="bibliotheque.menu_root"/>
        <!-- actions -->
        <menuitem name="liste des emprunts" id="bibliotheque_list_emprunt" parent="bibliotheque_emprunt_cat"
                  action="emprunt_action_window"/>
    </data>
</odoo>

